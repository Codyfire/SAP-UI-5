<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form">
	
	<Dialog
		title="Change Status: Target to Identified"
		type="Message"
		state="None"
		draggable="true"
		contentWidth="70%">
		<content>

			<form:SimpleForm minWidth="-1" maxContainerCols="2"
				layout="ResponsiveGridLayout" editable="true" visible="true">
				<form:content>
					<Label text="Buying Process Chance" class="sapUiLargeMarginEnd"
						design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit"/>
					<ComboBox value="{/BuyingProcessChance}" >
						<items>
							<core:Item text="25%" />
							<core:Item text="50%" />
							<core:Item text="75%" />
						</items>
					</ComboBox>
						
					<Label text="Win Chance" 
						design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit" />
					<ComboBox value="{/WinningChance}">
						<items>
							<core:Item text="25% - Generation Demand" />
							<core:Item text="50% - Demand Response" />
							<core:Item text="75% - Recurrence" />
						</items>
					</ComboBox>
					
				</form:content>
			</form:SimpleForm>
		</content>
		<beginButton>
			<Button iconDensityAware="false" text="Save" type="Transparent"
				icon="sap-icon://save" iconFirst="true" width="auto" enabled="true" visible="true"
				press="onSaveDialog"/>
		</beginButton>
		<endButton>
			<Button iconDensityAware="false" text="Cancel" type="Transparent"
				icon="sap-icon://sys-cancel" iconFirst="true" width="auto" enabled="true" visible="true"
				press="onCancelDialog"/>
		</endButton>
	</Dialog>
	
</core:FragmentDefinition>