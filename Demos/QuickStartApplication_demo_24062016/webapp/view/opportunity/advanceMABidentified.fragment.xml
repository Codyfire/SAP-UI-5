<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form">
	
	<Dialog
		title="Change Status: Identified to Proposal in Progres"
		type="Message"
		state="None"
		draggable="true"
		contentWidth="70%">
		<content>
			<form:SimpleForm minWidth="-1" maxContainerCols="2"
				layout="ResponsiveGridLayout" editable="true" >
				<form:content>

					<Label	text="Margin Objective"
						design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit"/>
				 	<Input maxWidth="100%" placeholder="Enter Margin Objective ..." valueLiveUpdate="true"
				 		value="{ 
				 			path: '/MarginObjective', 
				 			formatter: '.formatter.percent'
				 		}"/>
					<Label text="Decision Date"
						design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit"/>
					<DateTimeInput value="{/DecisionDate}" type="Date" />
						
					<Label text="Type of Service"
						design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit"/>
					<ComboBox value="{/TypeofService}" 
						editable="true" width="auto" maxWidth="100%"
						items="{
							path: 'maestros>/ServiceTypes',
							sorter: { path: 'maestros>name' }
						}">
						<core:Item text="{maestros>name}" />
					</ComboBox>
						
					<Label text="Project Beginning / Ending Date"
						design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit"/>
					<DateTimeInput value="{/BeginingDate}"	type="Date" />
					<DateTimeInput value="{/EndingDate}"	type="Date" />
						
					<Label text="Win Chance" 
						design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit" />
					<ComboBox value="{/WinningChance}">
						<items>
							<core:Item text="25% - Generation Demand" />
							<core:Item text="50% - Demand Response" />
							<core:Item text="75% - Recurrence" />
						</items>
					</ComboBox>
						
				</form:content>
			</form:SimpleForm>
		</content>
		<beginButton>
			<Button iconDensityAware="false" text="Save" type="Transparent"
				icon="sap-icon://save" iconFirst="true" width="auto" enabled="true" visible="true"
				press="onSaveDialog"/>
		</beginButton>
		<endButton>
			<Button iconDensityAware="false" text="Cancel" type="Transparent"
				icon="sap-icon://sys-cancel" iconFirst="true" width="auto" enabled="true" visible="true"
				press="onCancelDialog"/>
		</endButton>
	</Dialog>
	
</core:FragmentDefinition>