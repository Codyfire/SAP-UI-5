<mvc:View xmlns:core="sap.ui.core" 
    xmlns:html="http://www.w3.org/1999/xhtml" 
    xmlns:mvc="sap.ui.core.mvc" 
	xmlns:m="sap.m"
	xmlns:form="sap.ui.layout.form" 
    controllerName="QuickStartApplication.controller.opportunity.CreateOpportunity">
	
	<m:Page id="pageCreate" showHeader="true" title="Create Opportunity" showFooter="true" showNavButton="true"
		navButtonPress="onNavBack">
		<m:content>
			<form:SimpleForm id="formOpportunity" minWidth="-1" maxContainerCols="2"
				layout="ResponsiveGridLayout" editable="true" visible="true">
				<form:content>
					<m:Label text="Customer Name"
						design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit"/>
					<m:Input type="Text" value="{CustomerName}" placeholder="Enter Customer Name ..."
						enabled="true" visible="true" width="auto" valueHelpOnly="false" maxLength="0"/>
					<m:Label text="Opportunity Name"
						design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit"/>
					<m:Input type="Text" value="{OpportunityName}" placeholder="Enter Opportunity Name ..."
						enabled="true" visible="true" width="auto" valueHelpOnly="false" maxLength="0"/>
					<m:Label 
						text="Type of Service" design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit"/>
					<m:ComboBox value="{TypeofService}" placeholder="Select Type of Service ..."
						editable="true" enabled="true" visible="true" width="auto" valueState="None" maxWidth="100%"
						items="{
							path: 'maestros>/ServiceTypes',
							sorter: { path: 'maestros>name' }
						}">
						<core:Item text="{maestros>name}" />
					</m:ComboBox>
					<m:Label 
						text="Revenue Estimation" design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit"/>
					<m:Input value="{OpportunityValue}" type="Number" width="auto" placeholder="Enter Revenue Estimation ..." />
					<m:ComboBox value="EUR" 
						editable="true" enabled="true" visible="true" width="auto" valueState="None" maxWidth="100%">
						<m:items>
							<core:Item
								text="EUR" enabled="true"/>
							<core:Item
								text="USD" enabled="true"/>
						</m:items>
					</m:ComboBox>
					
					<m:Label 
						text="BU" design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit" />
					<m:ComboBox value="{BU}" 
						placeholder="Select Business Unit ..."
						editable="true" width="auto" valueState="None" maxWidth="100%"
						items="{
							path: 'maestros>/BusinessUnits',
							sorter: { path: 'maestros>name' }
						}">
						<core:Item text="{maestros>name}" key="{maestros>cod}" />
					</m:ComboBox>
					
					
					<m:Label 
						text="Office" design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit" />
					<m:Input
						id="inputOffice"
						type="Text"
						placeholder="Enter Office ..."
						showSuggestion="true"
						value="{Office}"
						suggestionItems="{maestros>/Offices}">
						<m:suggestionItems>
							<core:Item text="{maestros>name}" key="{maestros>cod}" />
						</m:suggestionItems>
					</m:Input>
					
					
				</form:content>
				<form:title/>
			</form:SimpleForm>
			<m:FlexBox alignItems="Start" justifyContent="End" >
				<m:items>
					<m:Button iconDensityAware="false" text="Save" type="Accept" class="sapUiSmallMargin"
						icon="sap-icon://save" iconFirst="true" width="auto" enabled="true" visible="true"
						press="onSave"/>
				</m:items>
			</m:FlexBox>
		</m:content>
		<m:footer/>
		<m:headerContent/>
		<m:subHeader/>
		<m:customHeader/>
	</m:Page>

</mvc:View>