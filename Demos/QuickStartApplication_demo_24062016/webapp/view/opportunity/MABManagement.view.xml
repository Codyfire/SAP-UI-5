				</m:content>
		</m:Panel>
		
		<m:Panel class="sapUiSmallMargin">
				<m:content>
				<l:Grid 
					width="100%"
					defaultSpan="L9 M9 S12">
					<l:content>
						
						<m:Text text="Delayed" class="cssNegrita">
							<m:layoutData>
								<l:GridData
									span="L3 M3 S8" />
							</m:layoutData>
						</m:Text>
						<m:Table id="tablaDelayed" width="100%" noDataText="No data" class="cssManagement"
							items="{
								path: '/Opportunitys',
								sorter: { path: 'Status' },
								filters: [{path: 'Status', operator: 'EQ', value1: 'Delayed'}]
							}">
							<m:items>
