													formatOptions: {showMeasure: true}
												}"
												Status="{=${OpportunityValue} >= 3000 ? 'Success' : 'Error'}"
												unit="EUR" />
										<m:ComboBox selectionChange="onAdvance">
											<m:items>
												<core:Item text="" />
												<core:Item text="Identified" />
												<core:Item text="Rejected" />
											</m:items>
										</m:ComboBox>
										<m:Button  text="Details" type="Default" press="onDetail"/>
									</m:cells>
								</m:ColumnListItem>
							</m:items>
			
							<m:columns>
								<m:Column width="30%">
