<mvc:View 
	xmlns:mvc="sap.ui.core.mvc" 
	controllerName="QuickStartApplication.controller.opportunity.MABManagement" 
	xmlns:l="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core">
	
	<m:Page showHeader="true" title="MAB Management" showFooter="true" showNavButton="true"
		navButtonPress="onNavBack">
		<m:content>
			
			<m:Panel class="sapUiSmallMargin">
				<m:content>
					
				<l:Grid
					width="100%"
					defaultSpan="L9 M9 S12">
					<l:content>
						
						<m:Text text="Waiting for Response" class="cssNegrita">
							<m:layoutData>
								<l:GridData
									span="L3 M3 S8" />
							</m:layoutData>
						</m:Text>
						<m:Table id="tablaWaiting" width="100%" noDataText="No data" class="cssManagement"
							items="{
								path: '/Opportunitys',
								sorter: { path: 'Status' },
								filters: [{path: 'Status', operator: 'EQ', value1: 'Waiting for Response'}]
							}">
							<m:items>
								<m:ColumnListItem >
									<m:cells>
										<m:ObjectIdentifier 
											title="{OpportunityID}" text="{CustomerName}" />
										<m:ObjectNumber
												number="{
													parts:[{path:'OpportunityValue'},'EUR'],
													type: 'sap.ui.model.type.Currency',
													formatOptions: {showMeasure: true}
												}"
												Status="{=${OpportunityValue} >= 3000 ? 'Success' : 'Error'}"
												unit="EUR" />

										<m:ComboBox selectionChange="onAdvance">
											<m:items>
												<core:Item text="" />
												<core:Item text="Won" />
												<core:Item text="Lost" />
												<core:Item text="Cancelled" />
											</m:items>
										</m:ComboBox>
										
										<m:Button 
											text="Details" type="Default" press="onDetail"/>
									</m:cells>
								</m:ColumnListItem>
							</m:items>
			
							<m:columns>
								<m:Column width="30%">
									<m:header>
										<m:Text text="Project" />
									</m:header>
								</m:Column>
								<m:Column width="30%">
									<m:header>
										<m:Text text="Value" />
									</m:header>
								</m:Column>
								<m:Column width="25%">
									<m:header>
										<m:Text text="Change Status"/>
									</m:header>
								</m:Column>
								<m:Column width="auto">
									<m:header>
										<m:Text text="Go to Details"/>
									</m:header>
								</m:Column>
							</m:columns>
						</m:Table>
						</l:content>
					</l:Grid>
				</m:content>
		</m:Panel>
		
