												}"
												Status="{=${OpportunityValue} >= 3000 ? 'Success' : 'Error'}"
												unit="EUR" />
										<m:ComboBox selectionChange="onAdvance">
											<m:items>
												<core:Item text="" />
												<core:Item text="Waiting for Response"/>
												<core:Item text="Rejected" />
												<core:Item text="Delayed" />
												<core:Item text="Cancelled" />
											</m:items>
										</m:ComboBox>
										<m:Button 
											text="Details" type="Default" press="onDetail"/>
									</m:cells>
								</m:ColumnListItem>
							</m:items>
			
							<m:columns>
								<m:Column width="30%">
									<m:header>
										<m:Text text="Project" />
									</m:header>
								</m:Column>
								<m:Column width="30%">
									<m:header>
										<m:Text text="Value" />
									</m:header>
								</m:Column>
								<m:Column width="25%">
									<m:header>
