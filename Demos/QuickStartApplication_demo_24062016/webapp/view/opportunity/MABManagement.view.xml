								</m:Column>
								<m:Column width="auto">
									<m:header>
										<m:Text text="Go to Details"/>
									</m:header>
								</m:Column>
							</m:columns>
						</m:Table>
						
						</l:content>
					</l:Grid>
				</m:content>
		</m:Panel>
		
