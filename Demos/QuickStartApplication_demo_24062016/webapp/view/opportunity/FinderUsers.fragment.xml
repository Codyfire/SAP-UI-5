<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form">
	
	<Dialog
		title="Finder Users"
		type="Message"
		state="None"
		draggable="true"
		contentWidth="70%">
		<content>

			<form:SimpleForm minWidth="-1" maxContainerCols="2"
				layout="ResponsiveGridLayout" editable="true" visible="true">
				<form:content>
					<Label text="Name" 
						design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit"/>
					<Input id="inputName" />
						
					<Label text="Employee ID" 
						design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit" />
					<Input id="inputEmployeeID" />
						
					<Label text="NIF" 
						design="Standard" width="auto" required="false" textAlign="Begin" textDirection="Inherit" />
					<Input id="inputNIF" />
				</form:content>
			</form:SimpleForm>
			
			<FlexBox alignItems="Start" justifyContent="End" >
				<items>
					<Button text="Filter" type="Emphasized" press="onFilterUsers" />
				</items>
			</FlexBox>
			
		<Table id="usersTable" mode="MultiSelect" width="100%" noDataText="No data"
				backgroundDesign="Translucent" showSeparators="All" growing="false" growingThreshold="20" growingScrollToLoad="false" 
				items="{
					path: '/Users',
					sorter: { path: 'Name'}
				}">
				<items>
					<ColumnListItem type="Active">
						<cells>
							<Text 
								text="{Name}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
							<Text 
								text="{EmployeeID}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
							<Text 
								text="{NIF}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
						</cells>
					</ColumnListItem>
				</items>
				<headerToolbar/>
				<columns>
					<Column width="auto" hAlign="Left" vAlign="Top"
						mergeDuplicates="false" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Block">
						<header>
							<Text text="Name" width="auto"
								maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top"
						mergeDuplicates="false" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Block">
						<header>
							<Text text="EmployeeID"
								width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
						</header>
						<footer/>
					</Column>
					<Column width="auto" hAlign="Left" vAlign="Top"
						mergeDuplicates="false" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Block">
						<header>
							<Text text="NIF"
								width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
						</header>
						<footer/>
					</Column>
				</columns>
			</Table>
			
			
		</content>
		<beginButton>
			<Button iconDensityAware="false" text="Save" type="Transparent"
				icon="sap-icon://save" iconFirst="true" width="auto" enabled="true" visible="true"
				press="onSaveDialog"/>
		</beginButton>
		<endButton>
			<Button iconDensityAware="false" text="Cancel" type="Transparent"
				icon="sap-icon://sys-cancel" iconFirst="true" width="auto" enabled="true" visible="true"
				press="onCancelDialog"/>
		</endButton>
	</Dialog>
	
</core:FragmentDefinition>