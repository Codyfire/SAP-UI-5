<mvc:View xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" height="100%" controllerName="QuickStartApplication.controller.login">
	<App id="idAppControl" autoFocus="true">
	<pages>
	<Page id="loginPage" enableScrolling="false" class="cssBackgroundLogin" showHeader="false">
		<content>
		    <VBox width="100%" height="60%" direction="Column" justifyContent="End" alignItems="Center" >
		        <items>
		            <l:VerticalLayout width="100%" id="__layout1">
		                <l:content>
		                    <Label id="lblLogin" text="Login" design="Bold" labelFor="inpLogin"/>
		                    <Input id="inpLogin" editable="true" value="" maxLength="20" width="100%" textAlign="Begin"/>
		                    <Label id="lblPWD" text="Password" design="Bold" labelFor="inpPWD"/>
		                    <Input id="inpPWD" type="Password" editable="true" value="" maxLength="20" width="100%"/>
		                    <Label id="lblError" class="mensajeError" design="Bold" style="color: red"/>
		                    <Button id="bntLogin2" text="Login" tap="" press="irMenu" icon="sap-icon://account" width="100%"/>
		                </l:content>
		            </l:VerticalLayout>
		        </items>
		    </VBox>
		</content>
		<!--m:footer>
		</m:footer-->
	<headerContent>
	    <Image width="90px" height="80px" id="__image1" src="images/everis4.jpg" busy="false"/>
	</headerContent>
	</Page>
	</pages>
	</App>
</mvc:View>