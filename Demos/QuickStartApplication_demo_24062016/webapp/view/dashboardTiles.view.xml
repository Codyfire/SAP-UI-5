    	<GenericTile header="Grafico barras D3" size="M" frameType="OneByOne" press="navegarGraficas" 
    	subheader="Columns" >
    		<tileContent>
    			<TileContent footer="Remaining reporting" size="M">
    				<content>
    					<NumericContent size="M" value="0" icon="sap-icon://crossed-line-chart" />
    				</content>
    			</TileContent>
    		</tileContent>
    	</GenericTile>
    	
    	<GenericTile header="Reporting" size="M" frameType="OneByOne" press="onReporting" 
    	subheader="Your reporting" >
    		<tileContent>
    			<TileContent footer="Remaining reporting" size="M">
    				<content>
    					<NumericContent size="M" value="0" icon="sap-icon://crossed-line-chart" />
    				</content>
    			</TileContent>
    		</tileContent>
    	</GenericTile>
    	
    	<GenericTile header="Dynamic Table" size="M" frameType="OneByOne" press="onDinamycTable" 
    	subheader="Table" >
    		<tileContent>
    			<TileContent footer="Dinamyc Table" size="M">
    				<content>
    					<NumericContent size="M" value="0" icon="sap-icon://table-chart" />
    				</content>
    			</TileContent>
    		</tileContent>
    	</GenericTile>
    	
    	<GenericTile header="Informes" size="M" frameType="OneByOne" press="onInformes" 
    	subheader="Tabla informes" >
    		<tileContent>
    			<TileContent footer="Informe Table" size="M">
    				<content>
    					<core:Icon src="sap-icon://table-view" class="Loaded M sapMNCIconImage sapUiIcon sapUiIconMirrorInRTL" />
