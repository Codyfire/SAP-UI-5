    	<!-- PRIMERA FILA -->
        <Title text="Employee" level="H5" titleStyle="H2" class="sapUiMediumMarginTop cssTitulosDashboard">
        	<layoutData>
		        <l:GridData span="L12 M12 S12" />
	        </layoutData>
        </Title>

    	<GenericTile header="Time &amp; Labor" size="M" frameType="OneByOne"
    		press="navegar1" subheader="Time and Labor" >
    		<tileContent>
    			<TileContent footer="Remaining days" size="M">
    				<content>
    					<NumericContent size="M" value="12" icon="sap-icon://unwired" />
    				</content>
    			</TileContent>
    		</tileContent>
    	</GenericTile>
    	
    	<GenericTile header="Project Management" size="M" frameType="OneByOne"
    		press="navergarGestionProyectos" subheader="Your projects" >
    		<tileContent>
    			<TileContent footer="Unstable projects" size="M">
    				<content>
    					<NumericContent size="M" value="2" icon="sap-icon://measurement-document" />
    				</content>
    			</TileContent>
    		</tileContent>
    	</GenericTile>
    	
    	<GenericTile header="Expenses Sheet" size="M" frameType="OneByOne"
    		press="navegarHojaDeGastos" subheader="Pending sheets" >
    		<tileContent>
    			<TileContent footer="Money pending charge" size="M" unit="EUR" >
    				<content>
    					<NumericContent size="M" value="550.60" icon="sap-icon://paid-leave" />
    				</content>
    			</TileContent>
    		</tileContent>
    	</GenericTile>
    	
    	<GenericTile header="Workflow Approval" size="M" frameType="OneByOne"
    		press="navegarDetailWorkflow" >
    		<tileContent>
    			<TileContent footer="Open workflow" size="M">
    				<content>
    					<NumericContent size="M" value="0" icon="sap-icon://puzzle" />
    				</content>
    			</TileContent>
    		</tileContent>
    	</GenericTile>
    	
    	<!-- SEGUNDA FILA -->
        <Title text="Opportunity Management" level="H5" titleStyle="H2" class="sapUiMediumMarginTop cssTitulosDashboard">
        	<layoutData>
		        <l:GridData span="L12 M12 S12" />
	        </layoutData>
        </Title>
    	
    	<GenericTile header="Create Opportunity" size="M" frameType="OneByOne"
    		press="onCreateOpportunity"  >
    		<tileContent>
    			<TileContent size="M">
    				<content>
    					<core:Icon src="sap-icon://create" class="Loaded M sapMNCIconImage sapUiIcon sapUiIconMirrorInRTL" />
    				</content>
    			</TileContent>
    		</tileContent>
    	</GenericTile>
    	
    	<GenericTile header="MAB Management" size="M" frameType="OneByOne"
    		press="onMABManagement" >
    		<tileContent>
    			<TileContent footer="Identified Opportunities" size="M" unit="EUR">
    				<content>
    					<NumericContent size="M" value="53k" icon="sap-icon://manager-insight" />
    				</content>
    			</TileContent>
    		</tileContent>
    	</GenericTile>
    	
    	<GenericTile header="MAB Reporting" size="M" frameType="OneByOne"
    		press="onMABReporting" imageDescription="sap-icon://folder" >
    		<tileContent>
    			<TileContent footer="Identified Opportunities" size="M" unit="EUR">
    				<content>
    					<core:Icon src="sap-icon://folder" class="Loaded M sapMNCIconImage sapUiIcon sapUiIconMirrorInRTL" />
    				</content>
    			</TileContent>
    		</tileContent>
    	</GenericTile>
    	
    	<!-- TERCERA FILA -->
        <Title text="Demo" level="H5" titleStyle="H2" class="sapUiMediumMarginTop cssTitulosDashboard">
