<mvc:View xmlns:core="sap.ui.core" 
		xmlns:html="http://www.w3.org/1999/xhtml" 
		xmlns:mvc="sap.ui.core.mvc" 
		xmlns="sap.m" 
		xmlns:l="sap.ui.layout" 
		xmlns:u="sap.ui.unified"
		controllerName="QuickStartApplication.controller.hojaDeGastos">

		<Page id="principal" title="Expensive Sheet" showNavButton="{device>/isPhone}" navButtonPress="onNavBack" >
			<content>
			    <Panel id="panelDetalle" expandable="false">
    			    <content>
    			        <l:Grid id="gridDetalle">
    			        <l:content>
    			            <Text text="Code: {Codigo}" maxLines="0" />
    			            <Text text="Customer: {Nombre}" maxLines="0" />
    			            <Text text="Code Task: {codigoTarea}" maxLines="0" />
    			            <Text text="Customer Task: {nombreTarea}" maxLines="0" />
    			            <Text text="Project Type: {ProjectType}" maxLines="0" />
    			            <Text text="Project Currency: {ProjectCurrency}" maxLines="0" />
    			            <Text text="Country: {Country}" maxLines="0" />
    			            <Text text="Project Manager: {ProjectManager}" maxLines="0"/>
    			            <Text text="Project Funct. Currency: {ProjectFunctCurrency}" maxLines="0" />
    			            <Text text="Rappel: {Rappel}" maxLines="0" />
    			            <Text text="Continuos Services Variable: {ContinuosServicesVariable}" maxLines="0" />
    			            <Text text="Operating Unit: {OperatingUnit}" maxLines="0" />
    			            <Text text="Organization: {Organization}" maxLines="0" />
    			            <Text text="Fecha de Inicio: {InitialDate}" maxLines="0" />
    			            <Text text="Fecha Finalización: {EndDate}" maxLines="0" />
    			          </l:content>
    			        </l:Grid>
    			    </content>
			    </Panel>

			        <IconTabBar selectedKey="__filter0" id="__bar0" expanded="true" expandable="true" >
			            <items>
			                <IconTabFilter text="Expensive Sheet" count="3" showAll="true" id="__filter0" textDirection="Inherit">
			                <content>
			                    <List noDataText="Drop list items here" id="__list0">
			                        <customData>
			                            <core:CustomData key="sap-ui-fastnavgroup" value="true" writeToDom="true" id="__data4"/>
			                        </customData>
			                        <items>
			                            <StandardListItem type="Navigation" counter="0" title="Mobile World Congress -  22/02/2016" description="Description Expensive Sheet 1" icon="" id="__item3"/>
			                            <StandardListItem type="Navigation" counter="0" title="Comida Clente - 10/02/2016" description="Description Expensive Sheet 2" icon="" id="__item4"/>
			                            <StandardListItem type="Navigation" counter="0" title="Viaje Bilbao Iberdrola - 11/02/2016" description="Description Expensive Sheet 3" icon="" id="__item5"/>
			                        </items>
			                     </List>
			                </content>
			                </IconTabFilter>
			                
			                <IconTabFilter id="receipt_tab" text="Receipts" enabled="true" icon="sap-icon://receipt" iconColor="Default" >
			                	<content>
			        				<Bar>
							            <contentRight>
							                <Button id="btnPrint" icon="sap-icon://print"  />
							                <Button id="btnSelect" icon="sap-icon://multi-select" press="handleMultiSelect" />
							            </contentRight>
									</Bar>
			        				<Table id="receipt_table" 
			        					noDataText="Drop column list items here and columns in the area above" 
			        					items="{receipts>/receipt}"
			        					selectionChange="pressFila" 
									    includeItemInSelection="true"   
									    mode="SingleSelectMaster" 
									    modeAnimationOn="false">
			        					<columns>
											<Column id="c1">
			                                    <header>
			                                        <Label text="Justification" id="h1"/>
			                                    </header>
			                                </Column>
			                                <Column id="c2">
			                                    <header>
			                                        <Label text="Receipt Amount" id="h2"/>
			                                    </header>
			                                </Column>
			                                <Column id="c3" demandPopin="false" minScreenWidth="Small">
			                                    <header>
			                                        <Text text="Expensive Type" id="h3"/>
			                                    </header>
			                                </Column>
	                                		<Column id="c4" demandPopin="false" minScreenWidth="Small" >
			                                    <header>
			                                        <Text text=" Date" id="h4"/>
			                                    </header>
			                                </Column>
			        					</columns><!-- sap.m.Column -->
		        	
		        						<items >
				                             <ColumnListItem>
												<cells>
												<ObjectIdentifier title="{receipts>Justification}" text="{receipts>ExpensiveType}"/>
												<ObjectNumber number="{parts:[{path:'receipts>ReceiptAmount'},{path:'receipts>CurrencyCode'}], 
																		type: 'sap.ui.model.type.Currency', 
																		formatOptions: {showMeasure: false}
																		}" 
																unit="{receipts>CurrencyCode}"/>
												<Text text="{receipts>ExpensiveType}"/>
												<DatePicker value="{receipts>Date}" editable="false" displayFormat="long" />
											
												</cells>
											</ColumnListItem>   
			                        	</items>
			        					
			        				</Table>
			        			
			        			 	
			        			 <Panel id="receipt_panel" visible="false" expandAnimation="true" class="sapThemeText-asBackgroundColor">
				        			 	<FlexBox height="100px" alignItems="Start" justifyContent="Start">
											<items>
				        			 		<FlexBox direction="Column" alignItems="Start" width="25%">
				        			 			<items>
							        			 	<Label text="Justification"/>
							        			 	<Input id="entry_justification" placeholder="Enter text" value="{Justification}" maxLength="30"/>
						        			 	</items>
					        			 	</FlexBox>
					        			 	
					        			 	<FlexBox direction="Column" alignItems="Start" width="25%">
				        			 			<items>	
							        			 	<Label text="Receipt Amount"/>
							        			 	<Input id="entry_receipt_amount" placeholder="Enter price" description="{CurrencyCode}"
							        			 		value="{ parts: [{path: 'ReceiptAmount'}, {path: 'CurrencyCode'}], 
							        			 				 type: 'sap.ui.model.type.Currency', 
							        			 				 formatOptions: {showMeasure: false },
							        			 				 constraints: {minimum : 0} }"/>
					        					</items>
					        				</FlexBox>
					        				
					        			 	<FlexBox direction="Column" alignItems="Start" width="25%">
				        			 			<items>	
							        			 	<Label text="Expensive Type"/>
													<ComboBox
														id="entry_expensive_type"
														value="{ExpensiveType}"
														items="{
															path: 'modelExpensiveType>/expensiveType',
															sorter: { path: 'name' }
														}">
														<core:Item key="{modelExpensiveType>id}" text="{modelExpensiveType>name}" />
													</ComboBox>
												</items>
											</FlexBox>
											
       			 							<FlexBox direction="Column" alignItems="Start" width="25%" >
				        			 			<items>	
							        			 	<Label text="Date" textAlign="Center"/>
							        			 	<DatePicker id="entry_date" value="{Date}" />
					        			 		</items>
					        			 	</FlexBox>
											
											</items>
										</FlexBox>
										
										<FlexBox
											alignItems="Start"
											justifyContent="SpaceBetween">
											<items>
												<l:HorizontalLayout>
													<u:FileUploader
														id="fileUploader"
														name="myFileUpload"
														width="400px"
														tooltip="Upload your file to the local server"
														uploadComplete="handleUploadComplete"/>
													<Button
														text="Upload File"
														type="Emphasized"
														press="handleUploadPress"/>
												</l:HorizontalLayout>
												<FlexBox alignItems="End">
													<Button id="receipt_cancel_button" text="Cancel" width="120px" icon="sap-icon://sys-cancel-2" press="onCancelReceipt" />
													<Button id="receipt_save_button" width="120px" icon="sap-icon://save" press="onSaveReceipt" />
												</FlexBox>
											</items>
										</FlexBox>
			        			 </Panel>
			        			 	
			                	</content><!-- sap.ui.core.Control -->
			                </IconTabFilter>
			                
			                <IconTabFilter text="Approved" count="2" icon="sap-icon://task" iconColor="Critical" id="__filter1">
			                    <content>
			                        <List noDataText="Drop list items here" id="__list1">
			                            <customData>
			                                <core:CustomData key="sap-ui-fastnavgroup" value="true" writeToDom="true" id="__data8"/>
			                            </customData>
			                            <items>
			                                <StandardListItem type="Navigation" counter="0" title="Mobile World Congress" description="Description Expensive Sheet 1" icon="" id="__item9"/>
			                                <StandardListItem type="Navigation" counter="0" title="Comida Cliente" description="Description Expensive Sheet 2" icon="" id="__item10"/></items></List>
			                    </content>
			                </IconTabFilter>
			                <IconTabFilter text="Paid" count="1" icon="sap-icon://simple-payment" id="__filter2" iconColor="Positive">
			                    <content>
			                        <Table noDataText="Drop column list items here and columns in the area above" id="__table0">
			                            <customData>
			                                <core:CustomData key="sap-ui-fastnavgroup" value="true" writeToDom="true" id="__data11"/>
			                            </customData>
			                            <items>
			                                <ColumnListItem counter="0" id="__item15">
			                                    <cells>
			                                        <Text text="Travel Bilbao Iberdrola" maxLines="0" id="__text6"/>
			                                        <Text text="22/02/2016" maxLines="0" id="__text7"/>
			                                        <Text text="98 €" maxLines="0" id="__text1" textAlign="Center"/></cells>
			                                </ColumnListItem>
			                                <ColumnListItem counter="0" id="__item16">
			                                    <cells>
			                                        <Text text="Travel Santander Repsol" maxLines="0" id="__text9"/>
			                                        <Text text="12/02/2016" maxLines="0" id="__text10"/>
			                                        <Text text="235,20 €" maxLines="0" id="__text2"/></cells>
			                                </ColumnListItem></items>
			                            <columns>
			                                <Column id="__column0" width="400px">
			                                    <header>
			                                        <Label text="Description" id="__label2"/>
			                                    </header>
			                                </Column>
			                                <Column id="__column1">
			                                    <header>
			                                        <Label text="Paid" id="__label3"/>
			                                    </header>
			                                </Column>
			                                <Column id="__column3">
			                                    <header>  
			                                        <Text text="Total" maxLines="0" id="__text0"/>
			                                    </header>
			                                </Column></columns></Table>
			                    </content>
			                </IconTabFilter>

			            </items>
			        </IconTabBar>

			</content>
			<footer id="footer">
				<Bar id="bar2">
					<contentLeft id="contentLeft">
						<Button id="btnBack" icon="sap-icon://refresh" press="handleRefresh" />
						<Button id="receipt_add_button" text="Add receipt" icon="sap-icon://accidental-leave" type="Accept" press="onShowPanelAddReceipt"/>
					</contentLeft>
					<contentRight id="contentLeft">
					    <Button id="receipt_delete_button" text="Delete" width="120px" press="onDeleteSlc" type="Reject" visible="false" />					
						<Button id="btnInfo" icon="sap-icon://message-information" press="handleInfo" />					
					</contentRight>
				</Bar>
			</footer>
		</Page>
</mvc:View>