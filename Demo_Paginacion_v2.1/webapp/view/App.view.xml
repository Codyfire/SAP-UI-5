<mvc:View 
	controllerName="Demo_Paginacion.controller.App" 
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<App>
		<pages>
			<Page id="pagePaginator" title="{i18n>title}">
				<content>
					
			<Table 
				id="tablaProducts"
				items="{
					path: '/results'
				}">
				<columns>
					<Column  
						hAlign="Center">
						<Text text="Product Id" />
					</Column>
					<Column 
						hAlign="Center">
						<Text text="Name" />
					</Column> 
					<Column
						hAlign="Center">
						<Text text="Weight Measure" />
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier title="{ProductID}" text="{Category}"/>
							<Text text="{Name}" />
							<Text text="{WeightMeasure}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
			
			<HBox id="hboxPagination" justifyContent="End">
				<!-- El objeto Paginator se anyade desde el controlador -->
			</HBox>
					
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>